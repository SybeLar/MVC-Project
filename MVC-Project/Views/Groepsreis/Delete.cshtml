@model MVC_Project_BSL.Models.Groepsreis

@{
    ViewData["Title"] = "Groepsreis Verwijderen";
}

<h1>Groepsreis verwijderen</h1>

<h3>Weet je zeker dat je deze groepsreis wilt verwijderen?</h3>

<div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">Bestemming</dt>
        <dd class="col-sm-10">@Model.Bestemming.BestemmingsNaam</dd>
        
        <dt class="col-sm-2">Prijs</dt>
        <dd class="col-sm-10">@Model.Prijs</dd>

        <dt class="col-sm-2">Begindatum</dt>
        <dd class="col-sm-10">@Model.Begindatum.ToShortDateString()</dd>

        <dt class="col-sm-2">Einddatum</dt>
        <dd class="col-sm-10">@Model.Einddatum.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </div>
</form>
