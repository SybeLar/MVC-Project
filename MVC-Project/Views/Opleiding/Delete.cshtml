@model MVC_Project_BSL.Models.Opleiding

@{
    ViewData["Title"] = "Verwijder Opleiding";
}

<h1>Verwijder opleiding</h1>

<!-- ModelState Foutmeldingen -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Er zijn fouten opgetreden:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="alert alert-danger" role="alert">
    Weet je zeker dat je de opleiding <strong>@Model.Naam</strong> wilt verwijderen?
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

<!-- Bootstrap 5.3.0 JS (inclusief Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeo0AEKN0dVPr5QK3qtCbhX5cZ1mJJ0k/tVxMn56X50lYqFm"
        crossorigin="anonymous"></script>
